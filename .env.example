# ==================================================
# AutoCbot - Complete System Configuration
# ==================================================

# ===================
# API Keys (Free Tier - Optional)
# ===================
COINGECKO_API_KEY=
MESSARI_API_KEY=
LUNARCRUSH_API_KEY=
GLASSNODE_API_KEY=

# ===================
# Exchange API Keys
# ===================
# IMPORTANT: Create API keys with NO WITHDRAWAL permissions
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_api_secret_here

# Coinbase Pro (optional)
COINBASE_API_KEY=
COINBASE_SECRET=
COINBASE_PASSPHRASE=

# ===================
# Telegram Notifications
# ===================
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===================
# Backend API Configuration
# ===================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# ===================
# Database
# ===================
DATABASE_URL=sqlite:///./autocbot.db
DB_URL=sqlite:///user_data/tradesv3.sqlite

# ===================
# CORS Origins (comma-separated)
# ===================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===================
# Trading Configuration
# ===================
DEFAULT_PAIRS=BTC/USDT,ETH/USDT,BNB/USDT,SOL/USDT
DEFAULT_TIMEFRAME=5m
MAX_POSITION_SIZE=0.1
MAX_OPEN_TRADES=5
DEFAULT_STOPLOSS=-0.05
DEFAULT_TAKEPROFIT=0.03

# Freqtrade Configuration
DRY_RUN=true
STAKE_CURRENCY=USDT
STAKE_AMOUNT=unlimited
STRATEGY=MeanReversionML
TIMEFRAME=5m

# ===================
# Data Sources Configuration
# ===================
USE_COINGECKO=true
USE_ALTERNATIVE_ME=true
USE_MESSARI=false
USE_LUNARCRUSH=false

# ===================
# Update Intervals (seconds)
# ===================
CACHE_TTL=60
PRICE_UPDATE_INTERVAL=5
SENTIMENT_UPDATE_INTERVAL=300

# ===================
# Feature Flags
# ===================
ENABLE_ML_PREDICTIONS=true
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true

# ===================
# Security
# ===================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# Redis Cache (Optional)
# ===================
# REDIS_URL=redis://localhost:6379/0

# ===================
# Monitoring & Logging
# ===================
# Sentry (optional)
# SENTRY_DSN=
LOG_LEVEL=INFO

# ===================
# Email Notifications (Optional)
# ===================
# SendGrid
# SENDGRID_API_KEY=
# FROM_EMAIL=noreply@autocbot.com

# ===================
# SMS Notifications (Optional)
# ===================
# Twilio
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# ==================================================
# Instructions:
# 1. Copy this file to .env:  cp .env.example .env
# 2. Fill in your actual API keys

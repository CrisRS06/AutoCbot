# ==================================================
# AutoCbot - Complete System Configuration
# ==================================================

# ===================
# API Keys (Free Tier - Optional)
# ===================
COINGECKO_API_KEY=
MESSARI_API_KEY=
LUNARCRUSH_API_KEY=

# ===================
# Exchange API Keys
# ===================
# IMPORTANT: Create API keys with NO WITHDRAWAL permissions
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_api_secret_here

# ===================
# Telegram Notifications
# ===================
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===================
# Backend API Configuration
# ===================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# ===================
# Database
# ===================
DATABASE_URL=sqlite:///./autocbot.db
DB_URL=sqlite:///user_data/tradesv3.sqlite

# ===================
# CORS Origins (comma-separated)
# ===================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===================
# Trading Configuration
# ===================
DEFAULT_PAIRS=BTC/USDT,ETH/USDT,BNB/USDT,SOL/USDT
DEFAULT_TIMEFRAME=5m
MAX_POSITION_SIZE=0.1
MAX_OPEN_TRADES=5
DEFAULT_STOPLOSS=-0.05
DEFAULT_TAKEPROFIT=0.03

# Freqtrade Configuration
DRY_RUN=true
STAKE_CURRENCY=USDT
STAKE_AMOUNT=unlimited
STRATEGY=MeanReversionML
TIMEFRAME=5m

# ===================
# Data Sources Configuration
# ===================
USE_COINGECKO=true
USE_ALTERNATIVE_ME=true
USE_MESSARI=false
USE_LUNARCRUSH=false

# ===================
# Update Intervals (seconds)
# ===================
CACHE_TTL=60
PRICE_UPDATE_INTERVAL=5
SENTIMENT_UPDATE_INTERVAL=300

# ===================
# Feature Flags
# ===================
ENABLE_ML_PREDICTIONS=true
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true

# ==================================================
# Instructions:
# 1. Copy this file to .env:  cp .env.example .env
# 2. Fill in your actual API keys
# 3. Never commit .env to git
# 4. Start with free tier (no API keys needed)
# 5. Enable paid services as needed
# ==================================================

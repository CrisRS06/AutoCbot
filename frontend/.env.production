# ========================================
# Frontend Production Environment Variables
# ========================================
#
# IMPORTANT: Update URLs to match your production deployment
#

# Backend API URL
# Update this to your production backend URL
# Examples:
#   - Railway: https://autocbot-api-production.up.railway.app
#   - Render: https://autocbot-api.onrender.com
#   - VPS: https://api.autocbot.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL
# Update this to your production WebSocket URL
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# App Configuration
NEXT_PUBLIC_APP_NAME=AutoCbot
NEXT_PUBLIC_APP_VERSION=1.0.0-mvp

# Feature Flags - MVP Configuration
# Most features disabled for MVP launch
NEXT_PUBLIC_FEATURE_ENABLE_LIVE_TRADING=false
NEXT_PUBLIC_FEATURE_ENABLE_PAPER_TRADING=true
NEXT_PUBLIC_FEATURE_ENABLE_SMART_ORDERS=true

NEXT_PUBLIC_FEATURE_ENABLE_ML_STRATEGY=false
NEXT_PUBLIC_FEATURE_ENABLE_BACKTEST=false
NEXT_PUBLIC_FEATURE_ENABLE_STRATEGY_CREATION=false

NEXT_PUBLIC_FEATURE_ENABLE_ADVANCED_METRICS=false
NEXT_PUBLIC_FEATURE_ENABLE_PERFORMANCE_CHARTS=true
NEXT_PUBLIC_FEATURE_ENABLE_PNL_CHARTS=true

NEXT_PUBLIC_FEATURE_ENABLE_TELEGRAM=false
NEXT_PUBLIC_FEATURE_ENABLE_EMAIL_NOTIFICATIONS=false
NEXT_PUBLIC_FEATURE_ENABLE_WEBHOOKS=false

NEXT_PUBLIC_FEATURE_ENABLE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_ENABLE_EXPORT=false

# Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_MIXPANEL_TOKEN=

# Error Tracking (Optional)
# NEXT_PUBLIC_SENTRY_DSN=

# ========================================
# Deployment Checklist:
# ========================================
# [ ] Update NEXT_PUBLIC_API_URL to production backend
# [ ] Update NEXT_PUBLIC_WS_URL to production WebSocket
# [ ] Verify all feature flags match backend configuration
# [ ] Test frontend can connect to backend API
# [ ] Verify CORS settings on backend allow frontend origin
# ========================================

# ========================================
# AutoCbot MVP Production Configuration
# ========================================
#
# IMPORTANT: Fill in all required values before deployment
# NEVER commit this file with real credentials to version control
#

# ========== API Settings ==========
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# ========== CORS Settings ==========
# Add your frontend production URL here
# Example: https://autocbot-frontend.vercel.app,https://autocbot.com
CORS_ORIGINS=https://localhost:3000

# ========== Database ==========
# SQLite for MVP (will migrate to PostgreSQL in v1.1)
DATABASE_URL=sqlite:///./autocbot_prod.db

# ========== Security (REQUIRED) ==========
# Generate a secure secret key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# CRITICAL: Change this from default!
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_32_CHARS_OR_MORE

JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========== Exchange API Keys (Optional for MVP) ==========
# Leave empty for paper trading only
# For live trading (disabled by default in MVP), add your exchange API keys
BINANCE_API_KEY=
BINANCE_SECRET=

# Alternative exchanges (not used in MVP)
COINBASE_API_KEY=
COINBASE_SECRET=
COINBASE_PASSPHRASE=

# ========== Market Data API Keys (Free Tiers) ==========
# Optional - system works without these
COINGECKO_API_KEY=
MESSARI_API_KEY=
LUNARCRUSH_API_KEY=
GLASSNODE_API_KEY=

# ========== Trading Configuration ==========
# MVP: Limited to 2 pairs
DEFAULT_PAIRS=BTC/USDT,ETH/USDT
DEFAULT_TIMEFRAME=5m

# ========== Risk Management ==========
MAX_POSITION_SIZE=0.1
MAX_OPEN_TRADES=5
DEFAULT_STOPLOSS=-0.05
DEFAULT_TAKEPROFIT=0.03

# ========== Feature Flags (MVP - Most Disabled) ==========
# Core features enabled
ENABLE_PAPER_TRADING=true

# Advanced features disabled for MVP
ENABLE_ML_PREDICTIONS=false
ENABLE_BACKTESTING=false
FEATURE_ENABLE_ML_STRATEGY=false
FEATURE_ENABLE_BACKTEST=false
FEATURE_ENABLE_ADVANCED_METRICS=false
FEATURE_ENABLE_TELEGRAM=false
FEATURE_ENABLE_LIVE_TRADING=false
FEATURE_ENABLE_EMAIL_NOTIFICATIONS=false
FEATURE_ENABLE_WEBHOOKS=false
FEATURE_ENABLE_STRATEGY_CREATION=false

# ========== Cache Settings ==========
CACHE_TTL=60
PRICE_UPDATE_INTERVAL=5
SENTIMENT_UPDATE_INTERVAL=300

# ========== Data Sources (Free tier only for MVP) ==========
USE_COINGECKO=true
USE_ALTERNATIVE_ME=true
USE_MESSARI=true
USE_LUNARCRUSH=false

# ========== Monitoring & Logging ==========
LOG_LEVEL=INFO
SENTRY_DSN=

# ========== Redis Cache (Optional) ==========
# Not required for MVP
REDIS_URL=

# ========== Notifications (Disabled for MVP) ==========
# Email notifications
SENDGRID_API_KEY=
FROM_EMAIL=

# Telegram notifications
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# SMS notifications
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ========================================
# MVP Deployment Checklist:
# ========================================
# [ ] Change SECRET_KEY to a secure random string
# [ ] Set CORS_ORIGINS to your frontend production URL
# [ ] Set DEBUG=false
# [ ] Optionally add Binance API keys for paper trading with real market data
# [ ] Verify DATABASE_URL points to production database location
# [ ] Run database migrations: alembic upgrade head
# [ ] Test all endpoints with authentication
# [ ] Monitor logs after deployment
# ========================================

# ========================================
# AutoCbot Environment Configuration Example
# ========================================
#
# Copy this file to .env and fill in your values
# For production, use .env.production
#

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# CORS - Allowed origins for frontend
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DATABASE_URL=sqlite:///./autocbot.db

# Security (Required)
SECRET_KEY=dev_secret_key_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Exchange API Keys (Optional)
BINANCE_API_KEY=
BINANCE_SECRET=
COINBASE_API_KEY=
COINBASE_SECRET=
COINBASE_PASSPHRASE=

# Market Data API Keys (Optional)
COINGECKO_API_KEY=
MESSARI_API_KEY=
LUNARCRUSH_API_KEY=
GLASSNODE_API_KEY=

# Trading Configuration
DEFAULT_PAIRS=BTC/USDT,ETH/USDT
DEFAULT_TIMEFRAME=5m

# Risk Management
MAX_POSITION_SIZE=0.1
MAX_OPEN_TRADES=5
DEFAULT_STOPLOSS=-0.05
DEFAULT_TAKEPROFIT=0.03

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_ML_PREDICTIONS=true
ENABLE_BACKTESTING=true

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=

# Optional Services
REDIS_URL=
SENDGRID_API_KEY=
FROM_EMAIL=
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=
